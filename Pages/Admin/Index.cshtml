@page "/admin"
@{
    Layout = null;
}
@using Microsoft.AspNetCore.Authorization
@using SportsStoreFix2.Pages.Admin
@attribute [Authorize]

<!DOCTYPE html>

<html>
<head>
    <title>SportsStore Admin</title>
    <link href="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <base href="/" />
</head>
<body>
    <component type="typeof(Routed)" render-mode="Server" />
    <script src="/_framework/blazor.server.js"></script>
</body>
</html>

<!-- The 'component' element takes in a 'type' attribute and loads the thing that we give it-->
<!-- In this case, the thing that we pass to it is a component (the 'Routed' component to be eaxct)-->
<!-- and the file format (e.g. .razor or .cs or ...) is automatically resolved-->
